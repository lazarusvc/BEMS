@page "/"
@using Budget_Estimates_Management_System.Pages.Dashboard

<PageTitle>Budget Estimates Management System</PageTitle>

<AuthorizeView>
	<Authorized>
		<h1>DashBoard</h1>
		<h2>Hi @context.User.Identity.Name</h2>

		<div class="container">
          <div class="row">
            <div class="col-3">
              <MyPrograms></MyPrograms>
            </div>
            <div class="col-3">
             <Notifications></Notifications>
            </div>
          </div>
          <div class="row">
            <div class="col">
              1 of 3
            </div>
            <div class="col">
              2 of 3
            </div>
            <div class="col">
              3 of 3
            </div>
          </div>
        </div>
	</Authorized>
	<NotAuthorized>
		<img src="splash.png" alt="splash"/>
	</NotAuthorized>

</AuthorizeView>

@code {
	[CascadingParameter]
	private Task<AuthenticationState> authenticationState { get; set; }

}